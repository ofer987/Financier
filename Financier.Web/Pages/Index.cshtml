@page
@model IndexModel
@{
  ViewData["Title"] = "Home page";
}

<div class="text-center">
  <h1 class="display-4">Welcome</h1>
  <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div>
  @foreach (var month in Model.Months)
  {
    <h2>@Model.DisplayMonth(month)</h2>

    <h3>Assets</h3>
    @foreach (var item in Model.GetAssets(month).OrderByDescending(asset => asset.Value))
    {
      <div class="flex-container" id="@Model.DisplayTagIds(item.Key)">
        <div class="flex-item flex-tags">
          @Model.DisplayTagNames(item.Key)
        </div>
        <div class="flex-item flex-value">
          @Model.DisplayPercentage(item.Value)
        </div>
      </div>
    }

    <h3>Expenses</h3>
    @foreach (var item in Model.GetExpenses(month).OrderByDescending(expense => expense.Value))
    {
      <div class="flex-container" id="@Model.DisplayTagIds(item.Key)">
        <div class="flex-item flex-tags">
          @Model.DisplayTagNames(item.Key)
        </div>
        <div class="flex-item flex-value">
          @Model.DisplayPercentage(item.Value)
        </div>
      </div>
    }
  }
  <div>
</div>
